<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context=".CreateAccountActivity"
    android:background="@color/my_text">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginVertical="45dp"
        android:id="@+id/signup_icon"
        android:src="@drawable/finsignupfin"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_icon"
        android:orientation="vertical"
        android:layout_marginHorizontal="32dp"
        android:id="@+id/hello_text">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello!"
            android:textStyle="bold"
            android:textSize="32dp"
            android:textColor="@color/my_primary"
            android:fontFamily="@font/dancingscript"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Let's get started"
            android:textStyle="bold"
            android:textSize="32dp"
            android:textColor="@color/my_primary"
            android:fontFamily="@font/poppins_regular"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/form_layout"
        android:layout_marginHorizontal="32dp"
        android:layout_below="@id/hello_text"
        android:orientation="vertical">
        
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_email_text"
            android:hint="Email Id"
            android:textSize="20sp"
            android:textColorHint="@color/my_primary"
            android:textColor="@color/my_primary"
            android:background="@drawable/rounded_corner"
            android:padding="16dp"
            android:imeOptions="actionNext"
            android:fontFamily="@font/poppins_light"
            android:inputType="textEmailAddress"
            android:layout_marginTop="12dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_password_text"
            android:hint="Password"
            android:textSize="20sp"
            android:textColorHint="@color/my_primary"
            android:textColor="@color/my_primary"
            android:background="@drawable/rounded_corner"
            android:layout_marginVertical="16dp"
            android:padding="16dp"
            android:fontFamily="@font/poppins_light"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:layout_marginTop="12dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_confirm_password_text"
            android:hint="Confirm Password"
            android:textSize="20sp"
            android:textColorHint="@color/my_primary"
            android:textColor="@color/my_primary"
            android:background="@drawable/rounded_corner"
            android:padding="16dp"
            android:fontFamily="@font/poppins_light"
            android:imeOptions="actionDone"
            android:inputType="textPassword" />
        
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:id="@+id/create_account"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Create new account"
            android:textSize="18dp"
            android:textColor="@color/my_text"/>
        
        <ProgressBar
            android:layout_width="24dp"
            android:layout_height="64dp"
            android:id="@+id/progress_bar"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="17dp"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/form_layout"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/my_primary"
            android:fontFamily="@font/poppins_regular"
            android:text="already have an account?"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_txtview_btn"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Log in"
            android:textColor="#5271FF"/>

    </LinearLayout>

</RelativeLayout>